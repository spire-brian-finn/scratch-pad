    "version": "0.2.0",
    "configurations": [
        {
            "name": "tun_client debug unit tests",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/tun/bin/unit_tests",
            "args": ["[UdpTx]"],
            //"args": ["[TcpTx]", "-c", "Can receive multiple packets"],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask":  "tun_client cmake and make",
            "miDebuggerPath": "/usr/bin/gdb"
        },
        { // There is definitely a better way to do this
            "name": "tun_client debug unit tests w/o rebuild",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/tun/bin/unit_tests",
            "args": ["[UdpTx]"],
            //"args": ["[TcpTx]", "-c", "Can receive multiple packets"],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "miDebuggerPath": "/usr/bin/gdb"
        }
    ]
}